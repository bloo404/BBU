@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Add Post </title>
    <style>
        .button-container {
            margin-top: 10px;
        }

        .button {
            display: inline-block;
            padding: 8px 16px;
            text-align: center;
            text-decoration: none;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .button:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div>
        <form action="/Main/UpdatePost" method="GET">
            Topic id: <input type="text" id="topicid" name="topicid" /> <br />
            Post id: <input type="text" id="postid" name="postid"/> <br/>
            Text : <input type="text" id="text" name="text" /> <br />
            <input type="submit" value="Update post" />
        </form>
    </div>
    <div class="button-container">
        <a href="/Main/AddPost" class="button"> Add post </a>
        <a href="/Main/GetPosts" class="button"> Get posts </a>
    </div>
</body>
</html>