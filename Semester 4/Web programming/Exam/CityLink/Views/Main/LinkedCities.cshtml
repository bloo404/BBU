@using CityLink.Models;

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> See all cities </title>
    <style>
        .button-container {
            margin-top: 10px;
        }

        .button {
            display: inline-block;
            padding: 8px 16px;
            text-align: center;
            text-decoration: none;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .button:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div>
        @{
            List<Link> cities = (List<Link>)ViewData["cityList"];
        }

        <table class="">
            <tr>
                <th>id</th>
                <th>name</th>
                <th>id city 2</th>
                <th>duration</th>
                <th>distance</th>

            </tr>
            @foreach (Link c in cities)
            {
                <tr>
                    <td>@c.id</td>
                    <td>@c.name1 </td>
                    <td>@c.name2</td>
                    <td> @c.duration min </td>
                    <td> @c.distance km</td>
                    <td>
                        <form action="/Main/LinkToCity" method="post" class="button">
                            <input type="hidden" name="id" value="@c.id" />
                            <input type="submit" value="Display links for that city" class="button" />
                        </form>
                    </td>
                </tr>
            }

        </table>

        <div class="button-container">
            <a href="/Main/GetCities" class="button"> See all cities </a>
            <!-- <a href="/Main/LinkToCity" class="button"> Link to a city </a> -->
        </div>

    </div>

</body>
</html>
